<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Studio:</strong>
  <%= @movie.studio %>
</p>

<p>
  <strong>Date:</strong>
  <%= @movie.date %>
</p>

<p>
  <strong>Price:</strong>
  <%= @movie.price %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @movie.genre %>
</p>

<h4>Reviews:</h4>

<% @movie.reviews.each do |review| %>
  <p>--------------------</p>
  <p><%= review.comment %></p>
  <p><%= review.rating %></p>
  <p>--------------------</p>
<% end %>


<%= simple_form_for :review, url: movie_reviews_path(@movie) do |f| %>
  <%= f.input :comment  %>
  <%= f.input :rating  %>
  <%= f.button :submit, 'Make Comment'%>  
<% end %>



<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
